<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <title>USER LIST</title>
</head>
<body class="p-3">
    <table class="table table-striped ">
        <thead>
          <tr>
            <th scope="col">NO</th>
            <th scope="col">User Name</th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
            <% user.forEach( (data,index) => { %>
                <tr>
                    <th scope="row"><%= index + 1 %></th>
                    <td><%= data.username %></td>
                    <td>
                        <a href="/user/detail"><button type="button" class="btn btn-dark">Detail</button></a>
                    </td>
                    <td>
                        <a href="/user/update?id=<%=data.id%>"><button type="button" class="btn btn-success">Update</button></a> 
                    </td>
                    <td>
                        <a href="/user/delete"><button type="button" class="btn btn-danger">Delete</button></a>
                    </td>
                </tr>
                <% }) %>
                
            </tbody>
        </table>
        <a href="/user/add"><button type="button" class="btn btn-primary">Add User</button></a>
    
    <!-- ini bootstrap js-->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
</body>
</html>

